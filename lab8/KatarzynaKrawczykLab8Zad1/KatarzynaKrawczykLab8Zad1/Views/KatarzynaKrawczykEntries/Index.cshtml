@model IEnumerable<KatarzynaKrawczykLab8Zad1.Models.KatarzynaKrawczykEntries>

@{
    ViewBag.Title = "Index";
}
<!-- część z wyszukiwarką - pasekktóry zawsze jest u góry-->
<div id="navbar" class="navbar_absolute">
    @using (Html.BeginForm("Index", "KatarzynaKrawczykEntries", FormMethod.Get))
    {
        @Html.TextBox("word")<input class="search-bar" type="submit" value="Search" />
    }
</div>
<!-- część z bannerem - miejsce na logo itp-->
<div id="banner">
    <div id="title">
        <img id="banner-image" src="~/Content/Images/logoIcon.png"  />
        Encyklopedia Dzikich Kotów
    </div>
</div>
<!-- część użytkowa strona-->
<div class="container body-content">
    <!-- lewy pasek strony -->
    <div class="left-side">
        <p class="side-header">Twórzmy razem!</p>
        <p>
            @Html.ActionLink("Dodaj nowe hasło", "Create")
        </p>
    </div>
    <!-- środkowy pasek strony - główny-->
    <div class="entries-list">
        <h2>Gatunki:</h2>
        <!-- tabela z hasłami-->
        <table>
            <tr>
                <th>
                    <p>Lista dostępnych haseł:</p>
                </th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        Nie odnaleziono hasła.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                <tr>
                    <td id="item" style="padding-top:5px; padding-bottom:5px;">
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.Keyword).ToString(), "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            }

        </table>
    <!-- prawy pasek strony -->
    </div>
    <div class="right-side">
        <p class="side-header">
            Podlej kwiatek!
        </p>
    </div>
</div>
@Scripts.Render("~/Scripts/cookiesScript.js")